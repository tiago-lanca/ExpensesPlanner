


    <DxFormLayout CssClass="w-100">
    <DxFormLayoutItem Caption="Salary:" CssClass="dxbold-label" ColSpanMd="12">
            <DxSpinEdit @bind-Value="user.Salary" Mask="@NumericMask.Currency">
                <DxNumericMaskProperties Culture="CultureInfo" />
            </DxSpinEdit>
        </DxFormLayoutItem>

        <DxFormLayoutItem Caption=" " ColSpanMd="12">
