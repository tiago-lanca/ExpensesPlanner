


    <DxFormLayout CssClass="w-100">
    <DxFormLayoutItem Caption="Salary:" CssClass="dxbold-label" ColSpanMd="12">
            <DxSpinEdit @bind-Value="MonthSalary" Mask="@NumericMask.Currency">
                <DxNumericMaskProperties Culture="CultureInfo" />
            </DxSpinEdit>
        </DxFormLayoutItem>
    <DxFormLayoutItem Caption=" " ColSpanMd="12">
        <DxCheckBox CheckType="CheckType.Switch" LabelPosition="LabelPosition.Right" Checked="@EnableSalaryPreset"
                        CheckedChanged="@((bool value) => CheckedChanged(value))" Alignment="CheckBoxContentAlignment.Left">
                Set this salary as default for the future.
            </DxCheckBox>
        </DxFormLayoutItem>

        <DxFormLayoutItem Caption=" " ColSpanMd="12">
            <DxButton Click="SaveSalaryPreset" Text="Save" />
            <DxButton RenderStyle="ButtonRenderStyle.Danger" CssClass="w-40" Text="Cancel" Click="CloseSalarySetDialog" />
        </DxFormLayoutItem>
    
    </DxFormLayout>
