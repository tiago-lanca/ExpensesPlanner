@rendermode InteractiveServer

<div class="overlay-login">
    <div class="background-login"></div>
    <RadzenStack Gap="0" class="rz-my-12 rz-mx-auto login-card rz-border-radius-6 rz-shadow-10" Style="width: 100%; max-width: 400px; overflow: hidden;">
        <RadzenCard class="rz-shadow-0 rz-border-radius-0 rz-background-color-info rz-p-12" style="text-align: center;">
            <RadzenIcon Icon="close"
                  Style="position: absolute; top: 10px; right: 10px; background: transparent; color: white; cursor: pointer; border: none;"
                  onclick="@GoBackLogin">
            </RadzenIcon>
            <RadzenText TextStyle="TextStyle.DisplayH3" TagName="TagName.H2" class="rz-color-white rz-mb-0">Login</RadzenText>
        </RadzenCard>
        <RadzenCard class="rz-shadow-0 rz-p-12">
            <RadzenTemplateForm Data=@("Login")>
                <RadzenLogin AllowRegister="true" AllowResetPassword="false" Login="@OnLogin" />
            </RadzenTemplateForm>
        </RadzenCard>
    </RadzenStack>
</div>



