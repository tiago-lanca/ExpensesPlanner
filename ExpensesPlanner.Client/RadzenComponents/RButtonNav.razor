

<RadzenButton>
    <ChildContent>
        <span class="icon" style="margin-right: 10px;">
            <RadzenIcon Icon="@Icon" />
        </span>
        <span>@Text</span>
    </ChildContent>
</RadzenButton>

@code {
    [Parameter] public string Icon { get; set; } = string.Empty;
    [Parameter] public string Text { get; set; } = string.Empty;
}
